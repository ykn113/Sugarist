<div class="container">
  <div class="row">

    <div class="col-md-2">
      <div class="sidebar">
        <h5>キーワード検索</h5>
          <div class="search-form">
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.text_field :keyword, value: @keyword %>
              <%= f.submit "Search", class: "btn btn-primary" %>
            <% end %>
          </div>
        <h5>ジャンル検索</h5>
          <% @genres.each do |genre| %>
            <%= link_to genre.name, recipes_path(genre_id: genre.id) %>
          <% end %>
      </div>
    </div>

    <div class="col-md-10">
      <div class="title">
        <h2><%= @keyword%>レシピ(<%= @recipe.count %>)</h2>
      </div>

      <% @recipe.each do |recipe| %>
        <div class="items">
          <%= link_to recipe_path(recipe.id) do %>
            <%= attachment_image_tag recipe,:recipe_image, size:"240x310", fallback: "no_image.jpg" %>
            <h5><%= recipe.name %></h5>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
