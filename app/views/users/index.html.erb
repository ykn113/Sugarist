<div class="container mt-5">
  <div class="row">
    <div class="sliderArea">
      <div class="regular_2 slider">
        <% @recipes.each do |recipe| %>
          <%= link_to recipe_path(recipe.id) do %>
            <%= attachment_image_tag recipe,:recipe_image, size:"200x300", fallback: "no_image.jpg" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
