<div class="home-visual">
  <div class="home-visual-content">
    <p class="home-visual-text">
       Welcome back<br/>
       <%= current_user.name %>さん
    </p>
  </div>
</div>

<div class="container mt-5">
  <!--MENU-->
  <div class="row">
    <div class="col-md-4 menu-box">
      <div class="index-button">
        <%= link_to "レシピを追加", new_recipe_path, class: "btn-circle-flat" %>
      </div>
    </div>
    <div class="col-md-4 menu-box">
      <% @random_recipes.each do |random_recipe| %>
        <%= link_to "今日は何作る？", recipe_path(random_recipe.id), class: "btn-circle-flat" %>
      <% end %>
    </div>
    <div class="col-md-4 menu-box">
      <%= link_to "ジャンルで探す", recipes_path, class: "btn-circle-flat" %>
    </div>
  </div>
  
  <!--閲覧数ランキング-->
  <div class="row my-5">
    <div class="col-md-12">
      <div class="top5 mb-3">
        <h3>閲覧数 Top 5</h3>
      </div>
      <div class="sliderArea">
        <div class="item-image-slide slider">
          <% @recipes.each.with_index(1) do |recipe, i| %>
            <%= link_to recipe_path(recipe.id) do %>
              <h4 class="slick-text">第<%= i %>位</h4>
              <%= attachment_image_tag recipe,:recipe_image, class: "slick-image", fallback: "no_image.jpg" %>
              <h4 class="slick-text"><%= recipe.name %></h4>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!--お気に入りレシピ一覧-->
  <div class="row mb-3">
    <div class="col-md-12">
        <h3>お気に入りレシピ</h3>
    </div>
  </div>
  
  <div class="row">
    <% @favorite_recipes.each do |favorite_recipe| %>
      <div class="col-md-3">
        <div class="items">
          <%= link_to recipe_path(favorite_recipe.id) do %>
            <%= attachment_image_tag favorite_recipe,:recipe_image, class: "img-fluid", fallback: "no_image.jpg" %>
          <% end %>
          <div class="mt-3 mb-5 d-flex justify-content-between">
            <div>
              <h5><%= link_to favorite_recipe.name, recipe_path(favorite_recipe.id) %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!--トップに戻るボタン-->
<span id="back">
  <a href="#">
    <i class="fas fa-arrow-circle-up arrow"></i>
  </a>
</span>