<div class="container mt-5">
  <div class="row">
    <div class="recipe-headding mb-3 ml-3">
      <h1><%= @recipe.name %></h1>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-5">

      <%= link_to recipe_path(@recipe.id) do %>
        <%= attachment_image_tag @recipe,:recipe_image, class: 'img-fluid', size:"400x550",  fallback: "no_image.jpg" %>
      <% end %>
    </div>

    <div class="col-md-3 my-3 my-md-0">
      <div class="recipe-ingredients">
        <h3>Ingredients</h3>
          <%= sanitize @recipe.ingredient, tags:%w(strong em p br div ul ol li) %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="recipe-details">

        <div class="recipe-detail-serves">
          <span class="detail">
            <%= @recipe.serve%>人分
          </span>
        </div>

        <div class="recipe-detail-serves">
          <span class="detail">
            <i class="fas fa-clock"></i>
          </span>
          <%= @recipe.cooking_time %>
        </div>

        <div class="recipe-detail-serves mb-4">
          <span class="detail">
            難易度
          </span>
           <div id="star-rate<%= @recipe.id %>"></div>
            <script>
            $('#star-rate<%= @recipe.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @recipe.rate %>,
            });
            </script>


        </div>

        <div class="tag-list mb-4">
          <i class="fas fa-tags"></i>
            <% @recipe.recipe_tags.each do |recipe_tag| %>
              <%= link_to recipe_tag.tag.tag_name, recipes_path(tag_id: recipe_tag.tag.id) %>
            <% end %>
        </div>

        <div class="memo mb-4">
          <h4>Memo</h4>
            <%= sanitize @recipe.memo, tags:%w(strong em p br div ul ol li) %>
        </div>

        <div class="views">
          <h4>Views</h4>
            <%= @recipe.impressionist_count %>
        </div>
      </div>


        <%= link_to "Edit", edit_recipe_path, class:"fas fa-edit btn btn-sm btn-primary" %></td>
        <%= link_to "Destroy", recipe_path(@recipe),method: :delete, class:"fas fa-trash btn btn-sm btn-primary", "data-confirm" =>"本当に消しますか?" %>
        <%= link_to "Back", recipes_path, class:"fas fa-backward btn btn-sm btn-primary"%>
      </div>
    </div>

    <div class="mt-3">
      <div class="method mb-3">
        <h3>Method</h3>
          <%= sanitize @recipe.method, tags:%w(strong em p br div ul ol li) %>
      </div>
    </div>

  </div>
</div>