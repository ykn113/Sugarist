<div class="container">
  <div class="row mt-5">
    <div class="col-md-5">
      <%= link_to recipe_path(@recipe.id) do %>
        <%= attachment_image_tag @recipe,:recipe_image, class: "img-fluid",  fallback: "no_image.jpg" %>
      <% end %>
    </div>

    <div class="col-md-7">
      <div class="recipe-headding">
        <h2><%= @recipe.name %></h2>
      </div>

      <div class="recipe-details">
        <div class="recipe-detail-serves">
          <span class="detail">
            SERVES
          </span>
          <%= @recipe.serve%>
        </div>

        <div class="recipe-detail-serves">
          <span class="detail">
            COOKS IN
          </span>
          <%= @recipe.cooking_time %>
        </div>

        <div class="recipe-detail-serves">
          <span class="detail">
            DIFFICULTY
          </span>
          <!--ここに難易度の星追加-->
        </div>

        <div class="tag-list">
          <h6>Tags</h6>
            <% @recipe.recipe_tags.each do |recipe_tag| %>
              <%= link_to recipe_tag.tag.tag_name, recipes_path(tag_id: recipe_tag.tag.id) %>
            <% end %>
        </div>

        <div class="recipe-ingredients">
          <h4>Ingredients</h4>
            <%=safe_join(@recipe.ingredient.split("\n"),tag(:br))%>
        </div>

        <%= link_to "Edit", edit_recipe_path, class:"btn btn-sm btn-primary" %></td>
        <%= link_to "Destroy", recipe_path(@recipe),method: :delete, class:"btn btn-sm btn-primary", "data-confirm" =>"本当に消しますか?" %>
      </div>
    </div>


  </div>

  <div class="mt-3">
    <div class="method">
      <h4>Method</h4>
        <%=safe_join(@recipe.method.split("\n"),tag(:br))%>
    </div>
    <div class="memo">
      <h4>Memo</h4>
        <%= @recipe.memo %>
    </div>
  </div>

</div>
