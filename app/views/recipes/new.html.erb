<div class="container">
  <div class="row">
    <h2>New Recipe</h2>
  </div>

  <div class="row">
    <%= form_with model: @recipe, local:true do |f| %>
    <div class="field">
      <%= f.label :レシピ名 %><br />
        <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :写真 %><br />
        <%= f.attachment_field :recipe_image %>
    </div>

    <div class="field">
      <%= f.label :材料 %><br />
        <%= f.text_area :ingredient %>
    </div>

    <div class="field">
      <%= f.label :作り方 %><br />
        <%= f.text_area :method %>
    </div>

    <div class="field">
      <%= f.label :調理時間 %><br />
        <%= f.select :cooking_time, Recipe.cooking_times.keys, {prompt: "Select"} %>
    </div>

    <div class="field">
      <%= f.label :◯人分 %><br />
        <%= f.select :serve, options_for_select((1..10).to_a) %>
    </div>

    <div class="field">
      <%= f.label :メモ %><br />
        <%= f.text_area :memo %>
    </div>

    <div class="field">
      <%= f.label :ジャンル %><br />
        <%= f.select :genre_id, @genre_list, include_blank: "Select" %>
    </div>

    <div class="field">
      <%= f.label :タグ %><br />
        <%= f.text_field :tag_name %>
        <%= f.submit 'Create Recipe', class:"btn btn-primary" %>
      <% end %>
    </div>

  </div>
</div>